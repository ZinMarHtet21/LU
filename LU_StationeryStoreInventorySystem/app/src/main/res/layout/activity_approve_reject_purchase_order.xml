<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android_test.zmh.lu_stationerystoreinventorysystem.StoreScreens.ApproveRejectPurchaseOrder"
    >
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderlist_s"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:divider="@color/lv_divider"
        android:dividerHeight="2dp"
        android:background="#fff9fff0"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:padding="15dp"
        android:layout_marginTop="60dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PO number"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        style="@style/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Status"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/orderlist_s"
        android:layout_marginEnd="45dp"
        style="@style/text" />

</RelativeLayout>
